{
  "name": "nodeapp",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "gypfile": "true",
  "scripts": {
    "test": "jest --coverage",
    "debug": "node --inspect app/index.js",
    "compile_commands": "npx node-gyp --debug configure -- -f gyp.generator.compile_commands_json.py && ln -snf Debug/compile_commands.json",
    "build:debug": "node-gyp --debug configure build",
    "build:release": "node-gyp --release configure build",
    "start": "node app/index.js",
    "build:docker": "PRIVATE_KEY=$(< ~/.ssh/$KEY_NAME); if [[ -n $PRIVATE_KEY ]]; then GIT_SSH_KEY=\"$PRIVATE_KEY\" docker-compose build; else echo \"Set proper KEY_NAME before invoking\"; fi",
    "clean": "node-gyp clean"
  },
  "author": "Andrea Bigagli",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "mongodb": "^3.6.3",
    "nocache": "^2.1.0"
  },
  "devDependencies": {
    "eslint": "^7.16.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "node-addon-api": "^3.1.0",
    "node-gyp": "^7.1.2"
  }
}
